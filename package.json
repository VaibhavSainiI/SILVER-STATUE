{
  "name": "silver-statue-store-backend",
  "version": "1.0.0",
  "description": "Backend API for Silver Statue E-commerce Store",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "seed": "node scripts/seed.js",
